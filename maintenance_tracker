#!/usr/bin/env ruby
require 'highline/import'

Dir["./app/**/*.rb"].each { |f| require f }
Dir["./lib/*.rb"].each { |f| require f }

if ARGV[0].upcase == "NEW" and ARGV[1].upcase == "CAR" and ARGV.length == 2
  year = ask("Please enter the year of your car")
  make = ask("Please enter the make of your car")
  model = ask("Please enter the model of your car")
  Car.create(year.to_i, make, model)
  puts "#{year} #{make} #{model} added to database"
end
